ARG BUILD_FROM
FROM $BUILD_FROM

ARG BUILD_ARCH

RUN apt-get update && \
    apt-get upgrade -y && \
    apt-get install -y -q --install-recommends --no-install-suggests nano tzdata procps curl && \
    mkdir -p /var/run/crowdsec/ && \
    rm -rf /var/lib/apt/lists/*

ADD https://github.com/crowdsecurity/cs-cloudflare-bouncer/releases/download/v0.2.1/crowdsec-cloudflare-bouncer-linux-amd64-static.tgz /crowdsec-cloudflare-bouncer.tgz

RUN tar xzvf /crowdsec-cloudflare-bouncer.tgz && rm /crowdsec-cloudflare-bouncer.tgz && mv /crowdsec-cloudflare-bouncer-v0.2.1/crowdsec-cloudflare-bouncer /crowdsec-cloudflare-bouncer

# Copy root filesystem
COPY rootfs /